{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask file upload example",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "module": "flask",
            "cwd": "${workspaceFolder}/file-upload",
            "env": {
                "FLASK_APP": "${workspaceFolder}/file-upload/app.py",
                "LANG": "en_US.UTF-8",
                "LC_ALL": "en_US.UTF-8"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "envFile": "${workspaceFolder}/.env",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}